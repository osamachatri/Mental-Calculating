<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level: "
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:fontFamily="@font/akaya_telivigala"
        />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:gravity="center"

        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/answer1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/questionTextView"
        android:background="#87CEEB"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/answer2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:gravity="center"

        android:layout_below="@id/answer1TextView"
        android:background="#87CEEB"
        android:padding="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/answer3TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:gravity="center"

        android:layout_below="@id/answer2TextView"
        android:background="#87CEEB"
        android:padding="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/answer4TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/answer3TextView"
        android:background="#87CEEB"
        android:gravity="center"

        android:padding="20dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
